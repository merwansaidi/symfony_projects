{% extends 'base.html.twig' %}



{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Utilisateurs</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Photo</th>
        <th scope="col">Moyenne</th>
      </tr>
    </thead>
    <tbody>
  {% if users is not empty %}
  {% for user in users %} 

          {% set total_notes = 0 %}
          {% set total_coeffs = 0 %}
          {% for note in notes %}
              {% set total_notes = total_notes + (note.valeur * note.matiere.coefficient) %}
              {% set total_coeffs = total_coeffs + note.matiere.coefficient %}
          {% endfor %}
          {% set avrg = (total_notes / total_coeffs) %}
             
      <tr>
        <th scope="row">{{ user.nom }}</th>
        <td>{{ user.prenom }}</td>
        <td>{{ user.image }}</td>
        <td>{{ avrg }}</td>
      </tr>
  {% endfor %}
  {% endif %}
    </tbody>
  </table>

<div>
  <h2>Ajouter un utilisateur</h2>
  {{ form(formUser) }}
</div>

  {# <span>Moyenne : </span>{{ dump(avg) }} #}
</div>



</div>
{% endblock %}
